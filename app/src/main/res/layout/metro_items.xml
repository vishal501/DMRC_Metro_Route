<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ccl_root"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#D6D6D6"
            app:layout_constraintTop_toTopOf="@id/tvMetroName"
            app:layout_constraintBottom_toBottomOf="@id/tvMetroName"/>
        <View
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:background="#5265FF"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/ivBgMetroIcon"
            app:layout_constraintEnd_toEndOf="@id/ivBgMetroIcon"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBgMetroIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_blue_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMetroIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingRight="0.7dp"
            android:visibility="gone"
            android:paddingBottom="0.7dp"
            android:src="@drawable/delhi_metro_logo1"
            app:layout_constraintStart_toStartOf="@id/ivBgMetroIcon"
            app:layout_constraintTop_toTopOf="@id/ivBgMetroIcon"
            app:layout_constraintBottom_toBottomOf="@id/ivBgMetroIcon"
            app:layout_constraintEnd_toEndOf="@id/ivBgMetroIcon"/>

        <TextView
            android:id="@+id/tvMetroName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Dwarka"
            android:fontFamily="@font/outfit_semibold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_text"
            android:paddingEnd="30dp"
            android:paddingStart="14dp"
            android:paddingVertical="6dp"
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivBgMetroIcon"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInterchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Dwarka"
            android:fontFamily="@font/outfit_regular"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="8dp"
            android:textColor="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>